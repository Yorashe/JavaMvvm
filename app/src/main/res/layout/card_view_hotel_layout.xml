<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="hotelVm"
            type="com.qinggan.javamvvm.ui.hotel.HotelDetailsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/default_main_bg"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_content_layout_height"
                    android:layout_marginEnd="@dimen/card_margin_end"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/card_margin_end"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="@dimen/card_margin_top">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hotelNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_h"
                                tools:text="@{hotelVm.hotel.name}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_50_color"
                                android:textSize="@dimen/text_size_m"
                                tools:text="@{hotelVm.hotel.info}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/card_margin_content_bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/scoreTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black_50_color"
                                android:textSize="@dimen/text_size_m"
                                tools:text="@{hotelVm.hotel.score}" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/hotelAddressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_50_color"
                            android:textSize="@dimen/text_size_m"
                            tools:text="@{hotelVm.hotel.name}" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:scaleType="center"
                            android:src="@mipmap/default_icon_faile_pic" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_data_layout_height"
                    android:layout_marginEnd="@dimen/card_margin_end"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入住日期"
                            android:textColor="@color/black_50_color"
                            android:textSize="@dimen/text_size_m" />

                        <TextView
                            android:id="@+id/in_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_h"
                            android:textStyle="bold"
                            tools:text="@{hotelVm.hotel.checkInDay}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="离店日期"
                            android:textColor="@color/black_50_color"
                            android:textSize="@dimen/text_size_m" />

                        <TextView
                            android:id="@+id/out_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_h"
                            android:textStyle="bold"
                            tools:text="@{hotelVm.hotel.checkOutDay}" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/totalDaysTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_totalday_bg"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:scaleType="centerCrop"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_m"
                        tools:text="共一晚" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_price_layout_height"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rmbSymbolTv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="bottom"
                        android:text="¥"
                        android:textColor="@color/flight_money_color"
                        android:textSize="@dimen/text_size_m"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_xxh"
                        tools:text="@{hotelVm.hotel.roomPrice}" />

                    <TextView
                        android:id="@+id/bedTypeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black_50_color"
                        android:textSize="@dimen/text_size_xm"
                        tools:text="@{hotelVm.hotel.roomInfo}" />
                </LinearLayout>

                <View
                    android:id="@+id/third_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/icon_split_line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/card_margin_bottom">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_bt_layout_height"
                    android:background="@color/color_withe"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancelTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="取消"
                        android:onClick="@{hotelVm::cancel}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/sureTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@mipmap/btn_icon_pay"
                        android:gravity="center"
                        android:text="立即支付"
                        android:onClick="@{hotelVm::book}"
                        android:textColor="@color/color_withe"
                        android:textSize="@dimen/text_size_m" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>